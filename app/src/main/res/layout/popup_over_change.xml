<?xml version='1.0' encoding='utf-8'?>
<LinearLayout xmlns:android='http://schemas.android.com/apk/res/android'
    android:layout_width='match_parent'
    android:layout_height='match_parent'
    android:orientation='vertical'

   >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width='match_parent'
        android:layout_height='wrap_content'
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/bowler"
        android:singleLine='true' >

        <requestFocus />
    </TextView>
    <!--change edittext to autocomplete text view By bibin-->
    <AutoCompleteTextView
        android:id='@+id/bowchange_poptxt'
        android:layout_width='match_parent'
        android:layout_height='wrap_content'
        android:hint='@string/playername'
        android:textSize="20dp"
        android:padding="10dp"
        android:singleLine="true"
        android:background="@drawable/rounded_corner"
        android:layout_marginTop="10dp"
        >

        <requestFocus />
    </AutoCompleteTextView>
    <TextView
        android:layout_width='match_parent'
        android:layout_height='wrap_content'
        android:textSize="30dp"

        android:layout_marginTop="20dp"
        android:text="@string/batsman"
        android:singleLine='true' >

        <requestFocus />
    </TextView>
<!--change edittext into autocomplete text view By bibin-->
    <AutoCompleteTextView
        android:id="@+id/batchange_poptxt"
        android:layout_width='match_parent'
        android:layout_height='wrap_content'
        android:hint='@string/playername'
        android:padding="10dp"
        android:textSize="20dp"
        android:singleLine="true"
        android:background="@drawable/rounded_corner"
        android:layout_marginTop="10dp"
        >

        <requestFocus />
    </AutoCompleteTextView>
</LinearLayout>
    <RelativeLayout
        android:layout_width='match_parent'
        android:gravity="center"
        android:layout_height='wrap_content' >

        <Button
            android:id='@+id/change_okbtn'
            android:layout_width='120dp'
            android:textSize="20dp"
            android:background="@drawable/background"
            android:layout_marginTop="10dp"
            android:layout_height='wrap_content'
            android:text='@string/ok' />

    </RelativeLayout>

</LinearLayout>